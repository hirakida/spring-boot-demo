<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.domain.AccountMapper">
  <select id="findOne" parameterType="long" resultType="com.example.domain.Account">
    SELECT `id`, `name`, `created_at`, `updated_at` FROM `account` WHERE `id` = #{id}
  </select>
  <select id="findAll" resultType="com.example.domain.Account">
    SELECT `id`, `name`, `created_at`, `updated_at` FROM `account`
  </select>
</mapper>
