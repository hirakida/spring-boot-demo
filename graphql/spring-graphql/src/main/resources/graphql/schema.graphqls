scalar LocalDateTime

schema {
    query: Query
    mutation: Mutation
}

type Query {
    user(id: ID!): User
    userByName(name: String!): [User!]!
    users: [User!]!
}

type Mutation {
    createUser(name: String!): User
    deleteUser(id: ID!): Boolean
}

type User {
    id: ID!
    name: String!
    createdAt: LocalDateTime!
    updatedAt: LocalDateTime!
}
