<?xml version="1.0" encoding="UTF-8"?>
<included>
  <appender name="HELLO" class="com.example.appender.HelloAppender">
    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <level>ERROR</level>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>
    <layout>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%thread] %logger{35} - %green(%msg) %n</pattern>
    </layout>
    <message>HelloAppender!</message>
  </appender>
</included>
