<?xml version="1.0" encoding="UTF-8"?>
<included>
  <springProperty name="APP_NAME" source="spring.application.name" defaultValue="demo" />
  <property name="LOG_FILE" value="${LOG_PATH}/${APP_NAME}.log" />

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <encoder>
      <charset>UTF-8</charset>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
    <file>${LOG_FILE}</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <!--<fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd-HHmm}.%i.gz</fileNamePattern>-->
      <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd-HHmm}.%i.log</fileNamePattern>
      <maxFileSize>${LOG_FILE_MAX_SIZE:-10MB}</maxFileSize>
      <maxHistory>${LOG_FILE_MAX_HISTORY:-0}</maxHistory>
    </rollingPolicy>
  </appender>
</included>
